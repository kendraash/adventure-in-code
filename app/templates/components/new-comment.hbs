{{#if newCommentForm}}
<h4>Add a wry remark</h4>
<div>
  <form>
    <div class="form-group">
      <label for="date">Date:</label>
      {{input value=date id="date"}}
    </div>
    <div class="form-group">
      <label for="author">Author:</label>
      {{input value=author id="author" placeholder="Annonymous is not an option"}}
    </div>
    <div class="form-group">
      <label for="text" >Comment:</label>
      {{input value=text id="text" placeholder="Something Nice."}}
    </div>
    <button {{action 'saveComment'}}>Save Comment</button>
  </form>
</div>
{{else}}
  <button {{action 'newCommentForm'}}>New Comment</button>
{{/if}}
