{{#if updatePostForm}}
  <h4>Update {{model.title}} By: {{model.author}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="date" >Date</label>
        {{input value=date id="date" placeholder=model.date}}
      </div>

      <div class="form-group">
        <label for="title" >Title</label>
        {{input value=title id="title" placeholder=model.title}}
      </div>

      <div class="form-group">
        <label for="author" >Author</label>
        {{input value=author id="author" placeholder=model.author}}
      </div>

      <div class="form-group">
        <label for="text" >Text</label>
        {{input value=text id="text" placeholder=model.text}}
      </div>

      <div class="form-group">
        <label for="image" >Image URL</label>
        {{input value=image id="image" placeholder=model.image}}
      </div>

      <button {{action 'update' model}}>Update and Save</button>
    </form>
  </div>
  {{else}}
  <button {{action 'updatePostForm'}}>Update Post</button>
  {{/if}}
