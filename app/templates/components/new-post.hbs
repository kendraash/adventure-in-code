{{#if addNewPost}}
  <h1>New Adventure</h1>
  <div>
   <form>
     <div class="form-group">
       <label for="date" placeholder="09.22.2015">Date</label>
       {{input value=date id="date"}}
     </div>

     <div class="form-group">
       <label for="title">Title</label>
      {{input value=title id="title"}}
     </div>

     <div class="form-group">
       <label for="author">Author</label>
       {{input value=author id="author"}}
     </div>

     <div class="form-group">
       <label for="text">Text</label>
       {{input value=text id="text"}}
     </div>

     <div class="form-group">
       <label for="image">Image URL</label>
       {{input value=image id="image"}}
     </div>

     <button {{action 'save'}}>Save</button>
   </form>
  </div>
 {{else}}
    <button {{action 'postFormShow'}}>New Post</button>
    <br>
    <br>
{{/if}}
